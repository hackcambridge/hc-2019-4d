mixin icon(humanName, caption = humanName)
  svg.icon(width='28.5pt' height='28.5pt' viewbox='0 0 11 11' preserveaspectratio='xMidYMid')
    title= caption
    - name = humanName.toLowerCase().replace(new RegExp(/\s/, 'g'), '-')
    - file = 'images/icons/' + name + '.svg'
    clippath(id=`${name}ClipPath`)
      use(x='0' y='0' xlink:href=`${asset(file)}#icon`)
    use(x='0' y='0' xlink:href=`${asset(file)}#icon` clip-path=`url(#${name}ClipPath)`)

mixin sponsorLogo(humanName)
  - name = humanName.toLowerCase().replace(new RegExp(/\s/, 'g'), '-').replace(new RegExp(/\./, 'g'), '')
  - file = 'images/sponsors-logos/' + name + '.svg'
  img(style='width: 100%; max-height: 85pt' draggable='false' alt=humanName src=`${asset(file)}#icon`)
