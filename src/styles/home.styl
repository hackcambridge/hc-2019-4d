/* ==========================================================================
   Welcome Section
   ========================================================================== */

.landing-welcome-section {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;

  box-sizing: border-box;
  width: 100%;
  min-height: 100%;
  padding: ($punit * 3) 0;

  dark-background();
  color: #fff;
  padding-top: 103px; /*Stop MLH logo from obscuring logo on mobile*/
}

.landing-welcome-content {
  @extend .content-wrapper-center;
}

.landing-welcome-dates {
  font-size: 1.2em;
  margin: 2em 0;
  opacity: 0.9;
}

.landing-welcome-logo {
  width: 100%;
  max-width: 400px;
  height: auto;
  margin-bottom: 4em;
}

.subscribe-form-output {
  padding-top: 10px;
  margin: 0;
}

.landing-welcome-subscribe-form {
  width: 100%;
  max-width: 400px;
}

.landing-welcome-lower-caret {
  cursor: pointer;

  svg {
    position: absolute;
    left: 50%;
    bottom: 20px;

    width: 40px;
    height: auto;
    margin-left: -20px;

    fill: none;
    stroke: $grayLighter;
    stroke-width: 2px;

    animation: updown 3s alternate infinite;
    position: absolute;

    @media only screen and (min-height: 600px) {
      bottom: 40px;
      width: 80px;
      height: 40px;
      margin-left: -40px;
    }
  }
}

.apply-link-container {
  margin-bottom 25px;
}

a.apply-link {
  display: inline-block;
  margin-element();
  padding: 6px 10px;
  border-radius: 3px;
  border: 2px solid $colorSecondary;
  opacity: 0.7;
  transition: opacity 0.2s;

  font-size: 1em;
  font-weight: 300;
  cursor: pointer;
  color: $colorSecondary;

  // animation: rotateBrand;
  // animation-duration: 10s;
  // animation-fill-mode: both;
  // animation-iteration-count: infinite;

  &:hover {
    text-decoration: none;
    opacity: 1;
  }
}

/* Subscribe Form
   ========================================================================== */

.subscribe-form-email {
  color: #fff;
  text-align: center;
  font-size: 1.2em;

  border-bottom-color: rgba(255, 255, 255, 0.4);
  
  &:focus {
    border-bottom-color: rgba(255, 255, 255, 1);
    outline: none;
    box-shadow: none;
  }

  &::placeholder {
    opacity: 0.5;
    color: #fff;
  }
}

.subscribe-form-note {
  margin-top: 1em;
  font-size: 0.8em;
  opacity: 0.9;
}

.subscribe-form-submit {
  flex: 0 0 auto;
  background: transparent;
  border: none;

  color: #fff;

  transition-property: opacity transform;
  transition-duration: 0.2s;

  &:hover, &:focus {
    opacity: 0.8;
    outline: none;
  }

  &:disabled {
    opacity: 0.5;
  }

  &:active {
    transform: translate(0, 5px);
  }
}

/* welcome animation
   ========================================================================== */

.landing-welcome-section {
  .hack-logo-cambridge-text {
    for $num in (1..9) {
      path:nth-child({$num}) {
        animation: logoAnimateIn;
        animation-delay: (1 + $num * 0.1)s
        animation-duration: 2s;
        animation-fill-mode: both;
      }
    }
  }
}

@keyframes logoAnimateIn {
  0% { opacity: 0; fill $colorPrimary; }
  20% { fill: $colorPrimary; }
  25% { opacity: 1; }
  50% { fill: #B72CD6; }
  70% { fill: #000; }
  100% { opacity: 1; }
}

@keyframes fadeIn {
  0% { opacity: 0; }
  100% { opacity: 1; }
}

@keyframes rotateBrand {
  0% { background-color: $logoColor1; }
  35% { background-color: $logoColor2; }
  60% { background-color: $logoColor3; }
  100% { background-color: $logoColor1; }
}

@keyframes updown {
  from { transform: translate(0, -25%); }
  to { transform: translate(0, 25%); }
}

.landing-welcome-social-links {
  margin-top: 4em;
  
  ul {
    list-style: none;
    padding: 0;
  }

  li {
    margin: 0 0.8em;
    padding: 0;
    display: inline-block;
  }

  svg {
    width: 24px;
    fill: #FFFFFF;
    vertical-align: bottom;
    opacity: 1;
    left: 0;
    bottom: 0;
    -webkit-transform: translate3d(0,0,0); // fixes flickering image on safari
    transition: opacity 0.2s;
  }
  
  p {
    font-size: 0.9em;
    opacity: 0.9;
  }

  a {
    color: #fff;
    text-decoration: none;
    position: relative;
    font-weight: bolder;

    transition: opacity 0.2s;

    &:hover {
      color: #fff;
      text-decoration: underline;

      svg {
        opacity: 0.8;
      }

      .social-link-text {
        text-decoration: underline;
      }
    }
  }
}

/* ==========================================================================
   About Sections
   ========================================================================== */

$home-light-section {
  padding: ($punit * 6) 0;

  color: $gray;

  .grand-heading {
    color: $colorSecondary;
  }
}

.landing-cambridge-photo-section {
  overflow: hidden;
  box-sizing: border-box;
  min-height: 200px;

  background-size: cover;
  background-position: bottom center;
  background-image: url(../images/cambridge-kings-photo.jpg);

  &::before {
    content: ' ';
    display: block;
    padding-top: 33.3%;
  }
}

.landing-intro-section {
  main-background();
  @extend $home-light-section;
}

.landing-venue-section {
  padding: $punit * 3 0;

  background-size: cover;
  background-position: top center;
  background-color: $colorDark;
  text-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
  background-image: url(../images/corn-exchange-photo.jpg);

  .grand-heading {
    margin-bottom: 10px;
  }

  p {
    margin-bottom: $punit * 2;
    font-weight: 300;
    font-size: 1.2em;
  }

  .content-wrapper-standard {
    margin: 0 auto;
    text-align: center;
    color: #FFFFFF;
    width: 100%;
  }
}

.landing-location-map {
  position: relative;

  display: block;
  width: 300px;
  height: 300px;
  max-width: 100%;
  margin: 0 auto;
  margin-bottom: -100px;

  background-size: cover;
  background-position: center;
  background-image: url(../images/location-map.png);
  border-radius: 5px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);

  &:hover .landing-location-marker{
    transform: scale(1.2) translate(0, -2px);
  }
}

.landing-location-marker {
  position: absolute;
  left: 50%;
  bottom: 50%;

  width: 30px;
  height: auto;
  margin-left: -10px;

  transition: transform 0.2s;
  transform-origin: bottom center;
}

/* ==========================================================================
   FAQs Section
   ========================================================================== */

.landing-faqs-section {
  @extend $home-light-section;

  .content-wrapper {
    width: 1000px;
  }

  .faqs-listing {
    @extend .clearfix;

    margin: 0 (-1 * $punit);
  }

  .faq-element {
    width: 100%;
    padding: ($punit);
    display: inline-block;
    box-sizing: border-box;
    vertical-align: top;
  }

  h3 {
    color: $grayDark; 
  }

  @media only screen and (min-width: 500px) {
    .faq-element {
      width: 50%;
    }
  }

  @media only screen and (min-width: 800px) {
    .faq-element {
      width: 33.33%;
    }
  }
}

/* ==========================================================================
   Sponsors Section
   ========================================================================== */

// `sponsor` triggers ad blockers. Now we user `helper`
.helpers-container {
  margin: ($punit * 2);

  .helper-link {
    display: inline-block;
    vertical-align: middle;
    max-width: 100%;
    box-sizing: border-box;

    img {
      max-width: 100%;
    }
  }

  .helper-link-wide img {
    width: 100%;
  }

  // Tall helper links could cause some weird bugs on mobile
  // Probably best to avoid for now!
  .helper-link-tall img {
    height: 100%;
  }

  // Name, width, height, padding
  $sponsorSizes = (cohost 1050px 800px 30px) (tera 583px 300px 20px) (giga 324px 185px 15px) (mega 180px 100px 10px) (kilo 100px 50px 5px);
  $minSize = 45px 30px 5px

  for $sponsor in $sponsorSizes {
    &-{$sponsor[0]} {
      $marginSize = min($minSize[2], ($sponsor[3]) / 2);

      .helper-link-wide {
        width: max($minSize[0], $sponsor[1] / 2);
      }

      .helper-link-tall {
        height: max($minSize[1], $sponsor[2] / 2);
      }

      .helper-link {
        padding: ($marginSize);
      }
    }
  }

  @media only screen and (min-width: 600px) {
    margin: ($punit * 2) (0);

    for $sponsor in $sponsorSizes {
      &-{$sponsor[0]} {
        $marginSize = ($sponsor[3]) * 2;
        $outerMargin = ~min($marginSize, $punit);
        margin-left: $outerMargin;
        margin-right: $outerMargin;

        .helper-link-wide {
          width: ($sponsor[1]);
        }

        .helper-link-tall {
          height: ($sponsor[2]);
        }

        .helper-link {
          padding ($marginSize);
        }
      }
    }
  }
}

.landing-helpers-section {
  padding: $punit * 3 0;

  dark-background();
  color: #FFFFFF;
}

.landing-footer {
  font-size: 0.9em;
  margin-top: 200px;
  color: $grayLight;
}
