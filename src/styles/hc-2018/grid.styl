}
.second-fourteen.unit {
    --second-initial: var(--fourteen);
}
// Extra units: combining
.small.unit {
    --base: calc(var(--initial) - var(--gutter));
}
.large.unit {
    --base: calc(var(--initial) + var(--gutter));
}
// Extra units: combining and standalone
.half.unit {
    --base: calc(var(--initial) + var(--half));
}

// Reset margins and padding
div {
    margin: 0;
    padding: 0;
}

// Containers
.container {
    display: flex;
    flex-direction: column;
}
.container.a4 {
    position: relative;
    width: 484pt;
    margin: 0 auto;
}
.container.width {
    margin: 0 var(--one);
}

// Basic grid
.row:not(section) {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

form .row, .body .row {
    display: block;
}
.persistent.row:not(section) {
    flex-direction: row;
}
.column:not(:empty), .columns:not(:empty) {
    margin: var(--half);
}
.row {
    margin: calc(var(--half) * -1);
}
.column {
    display: flex;
    flex-direction: column;
}
.column > *:not(.row) {
    display: block;
}
.column > *:not(.row) + .row {
    margin-top: var(--gutter);
}
.columns {
    flex-basis: 100%;
}

form > .column:not(:empty), .content > * {
    margin: calc(var(--gutter) / 2);
}
form.unit.row, .content.unit.row {
    margin: calc(var(--gutter) / 2 * -1);
}

.unit.column.grows:not(:empty) {
    flex-grow: 1;
}

@media (max-width: 595pt) {
    
    .container.a4 {
        width: calc(484 / 595 * 100vw);
    }
    .row:not(section) {
        flex-direction: column;
    }
    div.row:not(:first-child) {
        margin-top: 0;
    }

}


@media (min-width: 595pt) {

    .columns {
        column-count: 2;
        column-gap: 24pt;
        column-fill: auto;
    }
    .columns.balance {
        column-fill: balance;
    }
    .unit.row {
        min-height: var(--base);
    }
    
    // Columns
    .column {
        flex-grow: 0;
    }    
    .column:empty {
        margin: var(--half);
    }
    .unit.column {
        flex-basis: var(--base);
        flex-shrink: 0;
        min-width: min-content;
    }
    .unit.column.fit {
        min-width: max-content;
    }
    .unit.column.grows {
        flex-grow: 1;
    }
    }

}
