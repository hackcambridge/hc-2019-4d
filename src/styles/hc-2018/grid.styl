// Variables
:root {
    // User-defined
    --one: 57pt;
    --gutter: 13pt;
    // Calculated
    --two: calc(var(--one) * 2);
    --three: calc(var(--one) * 3);
    --four: calc(var(--one) * 4);
    --five: calc(var(--one) * 5);
    --six: calc(var(--one) * 6);
    --seven: calc(var(--one) * 7);
    --eight: calc(var(--one) * 8);
    --nine: calc(var(--one) * 9);
    --ten: calc(var(--one) * 10);
    --eleven: calc(var(--one) * 11);
    --twelve: calc(var(--one) * 12);
    --thirteen: calc(var(--one) * 13);
    --fourteen: calc(var(--one) * 14);
    --half: calc(var(--one) / 2);
}

// Default unit values
.unit {
    --initial: 0;
    --second-initial: 100%;
    --base: var(--initial);
    --second-base: var(--second-initial);
}
// Standard units
